<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/buttonRdEx"
        android:layout_width="55dp"
        android:layout_height="49dp"
        android:layout_marginStart="2dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewRdEx"
        android:layout_width="134dp"
        android:layout_height="132dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="153dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/guuber" />

    <ImageView
        android:id="@+id/likeButtonRdEx"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewRdEx"
        app:srcCompat="@drawable/guuber" />

    <ImageView
        android:id="@+id/dislikeButtonRdEx"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="83dp"
        app:layout_constraintBottom_toTopOf="@+id/usernameTextRdEx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/likeButtonRdEx"
        app:layout_constraintTop_toBottomOf="@+id/imageViewRdEx"
        app:srcCompat="@drawable/guuber" />

    <Button
        android:id="@+id/deleteAccButtonRdEx"
        android:layout_width="203dp"
        android:layout_height="41dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="18dp"
        android:text="DELETE ACCOUNT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/usernameLabelRdEx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="83dp"
        android:text="Username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/likeButtonRdEx" />

    <TextView
        android:id="@+id/phoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="10dp"
        android:text="Phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameLabelRdEx" />

    <TextView
        android:id="@+id/emailLabelRdEx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="11dp"
        android:text="Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneLabel" />

    <EditText
        android:id="@+id/usernameTextRdEx"
        android:layout_width="215dp"
        android:layout_height="20dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="56dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/likeButtonRdEx" />

    <EditText
        android:id="@+id/phoneTextRdEx"
        android:layout_width="215dp"
        android:layout_height="20dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="56dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameTextRdEx" />

    <EditText
        android:id="@+id/emailTextRdEx"
        android:layout_width="215dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="56dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneTextRdEx" />
</androidx.constraintlayout.widget.ConstraintLayout>