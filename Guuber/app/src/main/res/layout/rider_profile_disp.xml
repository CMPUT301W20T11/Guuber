<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010C0C"
    tools:context=".RiderProfileActivity">

    <ImageView
        android:id="@+id/imageViewRdIn"
        android:layout_width="134dp"
        android:layout_height="132dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="136dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/guuber" />

    <ImageView
        android:id="@+id/likeButtonRdIn"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="63dp"
        app:layout_constraintEnd_toStartOf="@+id/dislikeButtonRdIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewRdIn"
        app:srcCompat="@drawable/guuber" />

    <ImageView
        android:id="@+id/dislikeButtonRdIn"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewRdIn"
        app:srcCompat="@drawable/guuber" />

    <Button
        android:id="@+id/deleteAccButtonRdIn"
        android:layout_width="203dp"
        android:layout_height="41dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="18dp"
        android:text="DELETE ACCOUNT"
        android:textColor="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/usernameLabelRdIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="14dp"
        android:text="Username"
        android:textColor="#FF5722"
        app:layout_constraintEnd_toStartOf="@+id/usernameTextRdIn"
        app:layout_constraintTop_toBottomOf="@+id/likeButtonRdIn" />

    <TextView
        android:id="@+id/passwordLabelRdIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:text="Password"
        android:textColor="#FF5722"
        app:layout_constraintEnd_toStartOf="@+id/passwordTextRdIn"
        app:layout_constraintTop_toBottomOf="@+id/usernameLabelRdIn" />

    <TextView
        android:id="@+id/phoneLabelRdIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="38dp"
        android:text="Phone"
        android:textColor="#FF5722"
        app:layout_constraintEnd_toStartOf="@+id/phoneTextRdIn"
        app:layout_constraintTop_toBottomOf="@+id/passwordLabelRdIn" />

    <TextView
        android:id="@+id/emailLabelRdIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="43dp"
        android:text="Email"
        android:textColor="#FF5722"
        app:layout_constraintEnd_toStartOf="@+id/emailTextRdIn"
        app:layout_constraintTop_toBottomOf="@+id/phoneLabelRdIn" />

    <TextView
        android:id="@+id/usernameTextRdIn"
        android:layout_width="215dp"
        android:layout_height="20dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="56dp"
        android:ems="10"
        android:text="Name"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/likeButtonRdIn" />

    <TextView
        android:id="@+id/passwordTextRdIn"
        android:layout_width="215dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="56dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameTextRdIn" />

    <TextView
        android:id="@+id/phoneTextRdIn"
        android:layout_width="215dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="56dp"
        android:ems="10"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordTextRdIn" />

    <TextView
        android:id="@+id/emailTextRdIn"
        android:layout_width="215dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="56dp"
        android:ems="10"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneTextRdIn" />


</androidx.constraintlayout.widget.ConstraintLayout>