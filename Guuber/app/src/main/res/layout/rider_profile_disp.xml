<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RiderProfileActivity">

    <ImageView
        android:id="@+id/imageViewRdIn"
        android:layout_width="150"
        android:layout_height="150"
        android:layout_marginTop="32dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/riderprf"
        tools:srcCompat="@drawable/riderprf" />

    <ImageView
        android:id="@+id/likeButtonRdIn"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/dislikeButtonRdIn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewRdIn"
        app:srcCompat="@drawable/riderprf" />

    <ImageView
        android:id="@+id/dislikeButtonRdIn"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/likeButtonRdIn"
        app:layout_constraintTop_toBottomOf="@+id/imageViewRdIn"
        app:srcCompat="@drawable/guuber" />

    <Button
        android:id="@+id/deleteAccButtonRdIn"
        android:layout_width="203dp"
        android:layout_height="41dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="18dp"
        android:fontFamily="monospace"
        android:text="DELETE ACCOUNT"
        android:textColor="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/usernameLabelRdIn"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="56dp"
        android:fontFamily="monospace"
        android:text="Username"
        android:textColor="#FF5722"
        app:layout_constraintBaseline_toBaselineOf="@+id/usernameTextRdIn"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/emailLabelRdIn"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="monospace"
        android:text="Email"
        android:textColor="#FF5722"
        app:layout_constraintStart_toStartOf="@+id/phoneLabelRdIn"
        app:layout_constraintTop_toBottomOf="@+id/phoneLabelRdIn" />

    <TextView
        android:id="@+id/phoneLabelRdIn"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="monospace"
        android:text="Phone"
        android:textColor="#FF5722"
        app:layout_constraintStart_toStartOf="@+id/usernameLabelRdIn"
        app:layout_constraintTop_toBottomOf="@+id/usernameLabelRdIn" />

    <TextView
        android:id="@+id/usernameTextRdIn"
        android:layout_width="215dp"
        android:layout_height="20dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:text="Name"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/phoneTextRdIn"
        app:layout_constraintTop_toBottomOf="@+id/negRate" />

    <TextView
        android:id="@+id/phoneTextRdIn"
        android:layout_width="215dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/emailTextRdIn"
        app:layout_constraintTop_toBottomOf="@+id/usernameTextRdIn" />

    <TextView
        android:id="@+id/emailTextRdIn"
        android:layout_width="215dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="56dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneTextRdIn" />

    <TextView
        android:id="@+id/posRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="100%"
        android:textColor="#00FF00"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/likeButtonRdIn"
        app:layout_constraintStart_toStartOf="@+id/likeButtonRdIn"
        app:layout_constraintTop_toBottomOf="@+id/likeButtonRdIn" />

    <TextView
        android:id="@+id/negRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="100%"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/dislikeButtonRdIn"
        app:layout_constraintStart_toStartOf="@+id/dislikeButtonRdIn"
        app:layout_constraintTop_toBottomOf="@+id/dislikeButtonRdIn" />


</androidx.constraintlayout.widget.ConstraintLayout>