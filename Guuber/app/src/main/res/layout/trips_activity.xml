<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D2D59"
    tools:context=".ViewTripsActivity">


    <TextView
        android:id="@+id/trips_history_textView"
        android:layout_width="257dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:gravity="center_horizontal"
        android:text="Trips History"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/trips_history_list"
        android:layout_width="309dp"
        android:layout_height="502dp"
        android:layout_marginTop="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trips_history_textView" ></ListView>



</androidx.constraintlayout.widget.ConstraintLayout>

