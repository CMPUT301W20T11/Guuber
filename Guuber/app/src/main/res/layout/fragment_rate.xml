<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".RateFragment">

    <ImageView
        android:id="@+id/pos_thumb"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/ic_thumb"
        app:layout_constraintEnd_toStartOf="@+id/neg_thumb"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView

        android:id="@+id/neg_thumb"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="32dp"
        android:rotation="180"
        android:src="@drawable/ic_thumb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pos_thumb"
        app:layout_constraintTop_toTopOf="@+id/pos_thumb" />

    <TextView
        android:id="@+id/pos_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Positive"
        app:layout_constraintEnd_toEndOf="@+id/pos_thumb"
        app:layout_constraintStart_toStartOf="@+id/pos_thumb"
        app:layout_constraintTop_toBottomOf="@+id/pos_thumb" />

    <TextView
        android:id="@+id/neg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Negative"
        app:layout_constraintEnd_toEndOf="@+id/neg_thumb"
        app:layout_constraintStart_toStartOf="@+id/neg_thumb"
        app:layout_constraintTop_toBottomOf="@+id/neg_thumb" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Rate your experience"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>