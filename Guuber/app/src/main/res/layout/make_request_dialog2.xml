<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/blackImRq2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="125dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/guuber" />

    <ImageView
        android:id="@+id/blackIm2Rq2"
        android:layout_width="408dp"
        android:layout_height="145dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/guuber" />

    <TextView
        android:id="@+id/pickupAddTRq2"
        android:layout_width="96dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="116dp"
        android:text="Enter pickup location"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/blackIm2Rq2"
        app:layout_constraintStart_toStartOf="@+id/blackIm2Rq2" />

    <TextView
        android:id="@+id/dropoffAddTRq2"
        android:layout_width="103dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="72dp"
        android:text="Enter dropoff location"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/blackIm2Rq2"
        app:layout_constraintStart_toStartOf="@+id/blackIm2Rq2" />

    <EditText
        android:id="@+id/pickupAddRq2"
        android:layout_width="253dp"
        android:layout_height="25dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="575dp" />

    <EditText
        android:id="@+id/dropoffAddRq2"
        android:layout_width="250dp"
        android:layout_height="22dp"
        android:layout_marginStart="148dp"
        android:layout_marginBottom="72dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        app:layout_constraintBottom_toBottomOf="@+id/blackIm2Rq2"
        app:layout_constraintStart_toStartOf="@+id/blackIm2Rq2" />

    <Button
        android:id="@+id/makeRequestButtonRq2"
        android:layout_width="253dp"
        android:layout_height="42dp"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="12dp"
        android:text="Make request"
        app:layout_constraintBottom_toBottomOf="@+id/blackIm2Rq2"
        app:layout_constraintStart_toStartOf="@+id/blackIm2Rq2" />

    <TextView
        android:id="@+id/fareamtRq2"
        android:layout_width="157dp"
        android:layout_height="27dp"
        android:layout_marginStart="4dp"
        android:text="You have a ride offer"
        app:layout_constraintStart_toStartOf="@id/blackImRq2"
        app:layout_constraintTop_toTopOf="@id/blackImRq2" />

    <Button
        android:id="@+id/AcceptButtonRq2"
        android:layout_width="76dp"
        android:layout_height="43dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        android:text="Accept"
        app:layout_constraintBottom_toBottomOf="@+id/blackImRq2"
        app:layout_constraintStart_toStartOf="@id/blackImRq2" />

    <Button
        android:id="@+id/DeclineRq2"
        android:layout_width="70dp"
        android:layout_height="42dp"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="8dp"
        android:text="Decline"
        app:layout_constraintBottom_toBottomOf="@+id/blackImRq2"
        app:layout_constraintStart_toStartOf="@id/blackImRq2" />

    <Button
        android:id="@+id/viewDrProfRq2"
        android:layout_width="123dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:text="View Profile"
        app:layout_constraintEnd_toEndOf="@id/blackImRq2"
        app:layout_constraintTop_toBottomOf="@id/fareamtRq2" />

</androidx.constraintlayout.widget.ConstraintLayout>